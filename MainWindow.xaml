<Window x:Class="tp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="250">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold" TextAlignment="Center" TextWrapping="Wrap" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0">
            Tp Synthèse de Zakaria et Jérémy
        </TextBlock>
        <Button FontSize="20" Grid.Row="1" Grid.Column="0" Click="openMarketplace">
            Marketplace
        </Button>
        <Button FontSize="20" Grid.Row="1" Grid.Column="1" Click="openWall">
            Wall
        </Button>
    </Grid>
</Window>
